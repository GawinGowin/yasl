#!/usr/local/bin/yasl
#!

// Stack 0: 一時作業
// Stack 1: 外側ループのカウンタ
// Stack 2: 内側ループのカウンタ

3 0:=:1 !

1:%@ (         // スタック1のカウンタでループ
    "Outer: " print = 1: print "\n" print

    // 内側ループ: 2回
    2 1:=:2 !
    2:%@ (         // スタック2のカウンタでループ
        "  Inner: " print = 2: print "\n" print
        2:(1 -):2  // スタック2のカウンタをデクリメント
    ):2

    (1:(1 -):1)  // スタック1のカウンタをデクリメント
):1
